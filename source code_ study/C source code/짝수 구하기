#include <stdio.h>

int main(void)
{
	int n = 0;

	while (1)
	{
		printf("Enter the number >> ");
		scanf_s("%d", &n);

		int i = 2;
		int k = 1;

		if (n % 2 == 0)
		{
			while (i <= n)
			{
				printf("%d ", i);
				i = i + 2;
			}
		}
		if (n % 2 != 0)
		{
			while (k <= n)
			{
				printf("%d ", k);
				k = k + 2;

			}
		}
		printf("\n");
	}
	return 0;
}
